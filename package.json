{
  "name": "weeds",
  "version": "1.0.0",
  "description": "A real-world, server-rendered, React/Redux boilerplate from Kapost. Includes guides on setup and tool choices.",
  "author": "Nathanael Beisiegel",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kapost/weeds.git"
  },
  "bugs": "https://github.com/kapost/weeds/issues",
  "engines": {
    "node": "^5.11.1",
    "npm": "3.9.5"
  },
  "scripts": {
    "start": "NODE_PATH=\"./app\" node index.js",
    "development": "npm run clean && npm run prebuild && $(npm bin)/gulp",
    "development:hot": "npm run clean && npm run prebuild && HOT=true $(npm bin)/gulp development-hot",
    "development:no-server-rendering": "npm run clean && NO_SERVER_RENDERING=true $(npm bin)/gulp",
    "production": "npm run clean && npm run build:production && NODE_ENV=production npm run start",
    "server": "$(npm bin)/gulp server",
    "api:start": "concurrently --kill-others \"node exampleApi/apiServer.js\" \"node exampleApi/proxy.js\"",
    "prebuild": "$(npm bin)/gulp prebuild",
    "build:development": "npm run clean && npm run prebuild && $(npm bin)/gulp build",
    "build:production": "npm run clean && npm run prebuild && NODE_ENV=production BABEL_ENV=production $(npm bin)/gulp build-production",
    "test": "npm run prebuild && $(npm bin)/mocha",
    "test:debug": "$(npm bin)/mocha debug",
    "test:watch": "npm test -- --watch",
    "test:integration": "node bin/run-integration-tests.js",
    "test:coverage": "npm run test-coverage:build && open ./coverage/lcov-report/index.html",
    "test:coverage:build": "$(npm bin)/istanbul cover node_modules/.bin/_mocha",
    "test:coverage-code-climate": "npm run test-coverage:build && $(npm bin)/codeclimate-test-reporter < ./coverage/lcov.info",
    "eslint": "$(npm bin)/eslint .",
    "clean": "rm -rf build",
    "postinstall": "if [ $BUILD_APP ]; then npm run build:production; fi",
    "docs:install": "$(npm bin)/gitbook install",
    "docs:watch": "$(npm bin)/gitbook serve"
  },
  "keywords": [
    "react",
    "redux",
    "boilerplate",
    "guide",
    "webpack",
    "server-rendering"
  ],
  "dependencies": {
    "app-module-path": "^1.0.5",
    "assets-webpack-plugin": "^3.4.0",
    "axios": "^0.18.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-plugin-transform-react-display-name": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "classnames": "^2.2.5",
    "escape-html": "^1.0.3",
    "express": "^4.13.4",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-files-to-json": "^0.2.1",
    "gulp-hash": "^3.1.0",
    "gulp-sass": "^2.3.1",
    "gulp-svgmin": "^1.2.1",
    "gulp-util": "^3.0.7",
    "honeybadger": "^0.9.2",
    "honeybadger-js": "^0.4.0",
    "json-loader": "^0.5.4",
    "keymirror": "^0.1.1",
    "lodash": "^4.13.1",
    "mocha": "^2.5.1",
    "moment": "^2.12.0",
    "nock": "^8.0.0",
    "react": "15.1.x",
    "react-addons-css-transition-group": "15.1.x",
    "react-click-outside": "^2.1.0",
    "react-dom": "15.1.x",
    "react-dotdotdot": "^1.0.4",
    "react-redux": "^4.4.1",
    "react-resolver": "^3.0.1",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "unescape-html": "^1.0.0",
    "webpack": "^1.13.1",
    "yaku": "^0.15.9"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "cli-color": "^1.1.0",
    "codeclimate-test-reporter": "^0.3.1",
    "concurrently": "^2.2.0",
    "deep-freeze-strict": "^1.1.1",
    "enzyme": "^2.4.1",
    "eslint": "^2.6.0",
    "eslint-plugin-react": "^4.2.3",
    "express-http-proxy": "^0.9.0",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-watch": "^4.3.5",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "8.1.0",
    "mocha": "^2.4.5",
    "nock": "^7.2.2",
    "quick-local-ip": "^1.0.7",
    "react-a11y-alt": "github:pk-nb/react-a11y",
    "react-addons-test-utils": "15.1.x",
    "react-hot-loader": "^1.3.0",
    "redux-mock-store": "^1.1.1",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "ssl-root-cas": "^1.2.1",
    "supertest": "^1.2.0",
    "tree-kill": "^1.0.0",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
